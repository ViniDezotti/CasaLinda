      </children>
   </Pane>
   <RadioButton fx:id="productButton" layoutX="380.0" layoutY="14.0" mnemonicParsing="false" selected="true" text="Produto">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
      <toggleGroup>
         <ToggleGroup fx:id="search" />
      </toggleGroup>
   </RadioButton>
   <RadioButton fx:id="categoryButton" layoutX="523.0" layoutY="14.0" mnemonicParsing="false" text="Categoria" toggleGroup="$search">
