         <TableColumn fx:id="quantityColumn" prefWidth="78.0" text="Quantidade" />
         <TableColumn fx:id="descColumn" prefWidth="433.0" text="Descrição" />
         <TableColumn fx:id="categoryColumn" prefWidth="115.0" text="Categoria" />
