<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>

<Pane id="Background" prefHeight="670" prefWidth="1026" stylesheets="@styles/screens.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visual.casalinda.ProductController">
   <children>
      <TableView fx:id="table" layoutX="95.0" layoutY="94.0" prefHeight="405.0" prefWidth="836.0">
         <columns>
            <TableColumn fx:id="nameColumn" prefWidth="129.0" text="Nome" />
            <TableColumn fx:id="codeColumn" text="Código" />
            <TableColumn fx:id="qtdColumn" prefWidth="78.0" text="Quantidade" />
            <TableColumn fx:id="descColumn" prefWidth="433.0" text="Descrição" />
            <TableColumn fx:id="categoryColumn" prefWidth="115.0" text="Categoria" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="105.0" layoutY="548.0" mnemonicParsing="false" onMouseClicked="#addProduct" prefHeight="36.0" prefWidth="139.0" styleClass="greenButton" text="Adicionar" />
      <Button fx:id="editButton" layoutX="444.0" layoutY="548.0" mnemonicParsing="false" onMouseClicked="#editProduct" prefHeight="36.0" prefWidth="139.0" styleClass="orangeButton" text="Editar" />
      <Button fx:id="removeButton" layoutX="792.0" layoutY="548.0" mnemonicParsing="false" onMouseClicked="#removeProduct" prefHeight="36.0" prefWidth="139.0" styleClass="redButton" text="Remover" />
   </children>
</Pane>
